import unidecode
import io

WIDTH,HEIGHT=900,900

GREEN = 0,255,127
ORANGE = 255,165,0
BLACK=0,0,0
WHITE=255,255,255

WIN =pygame.display.set_mode((WIDTH,HEIGHT))
pygame.display.set_caption("TERMOOO")

def get_word():
